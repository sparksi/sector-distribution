{
  "name": "sector_starter",
  "version": "1.0.0",
  "description": "Sector Starter theme",
  "main": "gulpfile.js",
  "scripts": {
    "postinstall": "yarn outdated",
    "reinstall": "yarn rimraf node_modules && yarn cache clean && yarn install",
    "clean": "rimraf css/* && rimraf js/dist/*",
    "build": "yarn clean && yarn svg && yarn scss:lint && yarn run gulp --env prod && yarn pcss && yarn js",
    "js:transpile": "yarn babel js/src --out-dir js/dist",
    "js:lint": "yarn eslint js/src/** --config .eslintrc.yml",
    "js:watch": "onchange 'js/src/*.js' -- yarn run js:transpile",
    "js": "yarn js:lint && yarn js:transpile",
    "pcss": "yarn postcss --config .postcss.config.js -r css/*.css --no-map",
    "scss:lint": "yarn sass-lint -c .sass-lint.yml --verbose",
    "scss:compile": "yarn run gulp --env dev",
    "scss:watch": "onchange 'scss/**/*.scss' -- yarn scss:compile",
    "svg:sprite": "yarn run gulp svgSprite && yarn run gulp copySpriteMixins",
    "svg:optimise": "yarn svgo -f images --config .svgo.yml",
    "svg:watch": "onchange 'build/sprite/*.svg' -- yarn run svg",
    "svg": "yarn svg:sprite && yarn svg:optimise",
    "watch": "yarn run-p *:watch"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:sparksi/sector-distribution.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^8.6.2",
    "babel-cli": "^6.26.0",
    "bootstrap-sass": "3.3.7",
    "breakpoint-sass": "^2.7.1",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "svgo": "^1.0.5"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "gulp": "^3.9.1",
    "gulp-if": "^2.0.1",
    "gulp-rename": "1.3.0",
    "gulp-sass": "4.0.1",
    "gulp-sass-glob": "^1.0.6",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-svg-sprite": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "sass-lint": "^1.12.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "safari >= 7"
            ]
          }
        }
      ],
      [
        "stage-0"
      ]
    ]
  }
}
