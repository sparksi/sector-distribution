{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "drupalTranslations": true,
    "domready": true,
    "jQuery": true,
    "matchMedia": true,
    "Modernizr": true,
    "CKEDITOR": true
  },
  "rules": {
    "comma-dangle": [1],
    "consistent-return": [1],
    "no-underscore-dangle": [0],
    "quotes" : [1],
    "max-nested-callbacks": [1, 3],
    "no-plusplus": [1, {
      "allowForLoopAfterthoughts": true
    }],
    "no-param-reassign": [0],
    "no-prototype-builtins": [0],
    "valid-jsdoc": [1, {
      "prefer": {
        "returns": "return",
        "property": "prop"
      },
      "requireReturn": false
    }],
    "brace-style": ["error", "stroustrup"],
    "no-unused-vars": [1]
  }
}
