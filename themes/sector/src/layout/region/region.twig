{#
/**
 * @file
 * Template for a region.
 */
#}
{% set group_class = group ? 'region--' ~ group : 'region--' ~ region|clean_class %}
{% set wrapping_element = wrapper ? wrapper : 'div' %}
{% set aria_label = label ? 'aria-labelledby="' ~ region|clean_class ~ '-heading"' : '' %}
{% set other_classes = utility_classes ? utility_classes : [] %}
{% if content %}

  <{{wrapping_element}} {{ attributes.addClass([
    'region',
    group_class,
    region|clean_class
  ] | merge(other_classes))}} {{ aria_label|raw}}>
    {% if label %}
      <h2 id="{{ region }}-heading" class="sr-only">{{label}}</h2>
    {% endif %}
    <div class="region__container">
      {{ content }}
    </div>
  </{{wrapping_element}}>
{% endif %}
{% if libraries %}
  {% for library in libraries %}
    {{ attach_library(library) }}
  {% endfor %}
{% endif %}