{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% set classes = [
  'layout',
  in_preview ? 'layout--preview'
]|merge(utility_classes ? utility_classes : []) %}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

    {% if content.body_prefix|render|striptags('<drupal-render-placeholder>')|trim is not empty %}
      <div {{ region_attributes.body_prefix.addClass('layout__region', 'layout__region--body-prefix') }}>
        {{- content.body_prefix -}}
      </div>
    {% endif %}

    {% if content.body|render|striptags('<drupal-render-placeholder>')|trim is not empty %}
      <div {{ region_attributes.body.addClass('layout__region', 'layout__region--body') }}>
        {{- content.body -}}
      </div>
    {% endif %}

    {% if content.body_suffix|render|striptags('<drupal-render-placeholder>')|trim is not empty %}
      <div {{ region_attributes.body_suffix.addClass('layout__region', 'layout__region--body-suffix') }}>
        {{- content.body_suffix -}}
      </div>
    {% endif %}

  </div>
{% endif %}
{% if libraries %}
  {% for library in libraries %}
    {{ attach_library(library) }}
  {% endfor %}
{% endif %}
